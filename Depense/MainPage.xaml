<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Depense.MainPage">

    <StackLayout>
        <Label Text="Dépense"
            FontSize="36"
            HorizontalOptions="Center"
            TextColor="Black"/>
        <Label Text="Développé par Simon Inc."
                HorizontalOptions="Center"
                TextColor="Black"
                Margin="0, 0, 0, 60"/>      
        <Label Text="Adresse courriel"
                TextColor="Black"
                FontSize="16"/>
        <Entry Placeholder="Adresse courriel"
            x:Name="txtAdresseCourriel"
            BackgroundColor="White"
            Margin="0, 0, 0, 10"
            Keyboard="Email"/>
        <Label Text="mot de passe"
            TextColor="Black"
            FontSize="16"/>
        <Entry Placeholder="Mot de passe"
            x:Name="txtMotDePasse"
            BackgroundColor="White"
            Margin="0, 0, 0, 10"
            IsPassword="True"/>
        <Button Text="Se Connecter"
            x:Name="btnConnexion"
            BackgroundColor="#65A3FF"
            TextColor="White"/>
        <Button Text="Créer nouveau compte"
            x:Name="btnCreerCompte"
            BackgroundColor="Transparent"
            TextColor="#0055D2"/>           
    </StackLayout>

</ContentPage>
